.table {
  border: 0px solid darkgray;
}
.tr {
  display: flex;
  width: 100%;
  height: 4rem;
  align-items: center;
  justify-content: space-between;
  overflow: hidden;
}
.td {
    width:40%;
    margin-left: 0rpx;
    justify-content: center;
    text-align: center;
}
.content{
  display: flex;
  width: 100%;
  justify-content: center;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
  position: relative;
  align-items: center;
}
.bg-w{
  background: snow;
}
.bg-g{
  background: #E6F3F9;
}
.th {
  width: 40%;
  justify-content: center;
  background: #3366FF;
  color: #fff;
  display: flex;
  height: 4rem;
  align-items: center;
}
 .del {
  background-color: red;
  width: 90rpx;
  height: 4rem;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  font-size: 28rpx;
}
 .touch-move-active .content,
 .touch-move-active .del {
   -webkit-transform: translateX(0);
   transform: translateX(0);
 }